<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.PrimaryController">
   <children>
      <MenuBar layoutY="1.0" prefHeight="26.0" prefWidth="640.0">
        <menus>
          <Menu mnemonicParsing="false" onAction="#switchToSecondary" text="Play">
               <items>
                  <MenuItem fx:id="playButton" mnemonicParsing="false" onAction="#switchToSecondary" text="Play with Friends" />
               </items></Menu>
          <Menu mnemonicParsing="false" text="V.S BOT">
            <items>
              <MenuItem fx:id="easyButton" mnemonicParsing="false" onAction="#switchToEasy" text="Easy" />
                  <MenuItem fx:id="mediumButton" mnemonicParsing="false" onAction="#switchToMedium" text="Medium" />
                  <MenuItem fx:id="hardButton" mnemonicParsing="false" onAction="#switchToHard" text="Hard" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="View">
              <items>
                <MenuItem fx:id="historyButton" mnemonicParsing="false" onAction="#switchToHistory" text="History">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="H" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="About">
            <items>
              <MenuItem fx:id="helpButton" mnemonicParsing="false" onAction="#switchToHelp" text="Help" />
                  <MenuItem fx:id="authorButton" mnemonicParsing="false" onAction="#switchToAuthor" text="Author" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </children>
</AnchorPane>
